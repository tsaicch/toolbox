helm install gitlab gitlab/gitlab   --set certmanager.install=false   --set global.ingress.configureCertmanager=false   --set global.ingress.tls.secretName=gitlab-cert  --set nginx-ingress.rbac.createClusterRole=false  --set certmanager.rbac.create=false --set gitlab-runner.rbac.create=false --set prometheus.rbac.create=false --set nginx-ingress.rbac.createRole=false --set nginx-ingress.rbac.create=false --set global.ingress.enabled=false --set global.appConfig.object_store.enabled=false  --set gitlab-runner.install=false --set nginx-ingress.enabled=false --set global.kas.enabled=false --set prometheus.install=false --set global.registry.enabled=false -n devns1

# create gitlab ingress
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: tsaicch-gitlab-ingress
  namespace: devns1
spec:
  ingressClassName: nginx
  rules:
  - host: tsaicch-gitlab.isb.prod.gcp.tsmc.com
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: gitlab-webservice-default
            port:
              number: 8181
